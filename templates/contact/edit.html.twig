{% extends 'contact/base.html.twig' %}

{% block title %}Modifier un contact{% endblock %}

{% block page_title %}
    <h2 class="m-0">Modifier {{ contact.fullname }}</h2>
{% endblock %}

{% block buttons %}
    <span class="me-5">
        <b>ID</b> {{ contact.id }}
    </span>
    <div class="btn-group">
        <a href="{{ path('contact_show', {'id': contact.id}) }}" class="btn btn-outline-primary">Afficher le
            profil</a>
        <a href="{{ path('contact_index') }}" class="btn btn-outline-secondary">Voir les contacts</a>
    </div>
{% endblock %}

{% form_theme form 'bootstrap_5_horizontal_layout.html.twig' %}

{% block content %}

    {{ form_start(form) }}
    <div class="row ">
        <div class="col-6">
            {{ form_row(form.firstname) }}
        </div>
        <div class="col-6">
            {{ form_row(form.lastname) }}
        </div>

        <div class="col-4">
            <div class="position-relative">
                {{ form_errors(form.picture) }}
                {{ form_widget(form.picture) }}
                <div class="position-absolute w-25 start-50 top-50 translate-middle-x">
                    <img src="{{ asset('profile/'~contact.picture) }}"
                         class="rounded-circle shadow img-fluid"
                         alt="photo de profile"/>
                </div>
            </div>
        </div>
        <div class="col-8">
            {{ form_rest(form) }}
        </div>
    </div>
    <div class="text-end">
        <button class="btn btn-outline-primary">Modifier</button>
    </div>
    {{ form_end(form) }}

{% endblock %}
